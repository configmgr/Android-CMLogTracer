<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="5dp">

    <TextView android:id="@+id/logEntryListViewRowMessageTextView"
              android:layout_width="wrap_content"
              android:layout_height="30dp"
              android:gravity="left|top"
              android:textStyle="bold"
              android:textSize="20dp"
              android:textColor="#ffffff"
              android:ellipsize="end"
              android:singleLine="true"
              android:layout_marginTop="1dp" />

    <TextView android:id="@+id/logEntryListViewRowDateTimeTextView"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_below="@id/logEntryListViewRowMessageTextView"
              android:textSize="12dp"
              android:textColor="#ffffff"
              android:layout_marginBottom="1dp"/>

    <TextView android:id="@+id/logEntryListViewRowLineNumberTextView"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_below="@id/logEntryListViewRowMessageTextView"
              android:layout_alignParentRight="true"
              android:textSize="12dp"
              android:textColor="#ffffff"
              android:layout_marginBottom="1dp"/>

</RelativeLayout>